<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/myparking"
    android:orientation="vertical"




    tools:context=".ManageEmployee">



    <TextView
        android:id="@+id/addEmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    Add notifiction"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:onClick="Add_New_Employee"
            android:drawableTop="@drawable/ic_person_add_" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notifiction"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/emp_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>



</LinearLayout>